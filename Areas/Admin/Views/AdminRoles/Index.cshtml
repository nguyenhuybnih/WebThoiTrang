@model IEnumerable<WebThoiTrang.Models.Role>

@{
    ViewData["Title"] = "QLy truy cap";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="table-responsive">
    <table class="table">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><a asp-action="Create">Thêm mới</a></h3>

                
            </div>
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Tên</th>
                <th scope="col">Mô tả</th>

            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (var item in Model)
            {
                <tr id="tr_@item.RoleId">
                    <td>@(i++)</td>
                    <td>@item.RoleName</td>
                    <td>@item.Description</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-primary btn-sm">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-info btn-sm">Details</a> |
                        <a asp-action="Delete" asp-route-id ="@item.RoleId" class="btn btn-danger btn-sm btn-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
